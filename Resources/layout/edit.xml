<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="fill_parent"
    android:gravity="center"
    android:layout_height="fill_parent"
    android:id="@+id/linearLayout1">
    <TextView
        
        android:text="Nome do Responsável:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nomeResponsavel"
        android:paddingHorizontal="50px"
        
        />
    <TextView
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50px"
        android:id="@id/editNomeResponsavel" />
    <TextView
        android:text="Telefone do Responsável:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/telefoneResponsavel"
        android:paddingHorizontal="50px"/>
    <TextView
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50px"
        android:id="@+id/editTelefoneResponsavel" />
    <TextView
        android:text="CPF do Responsável:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="50px"
        android:id="@+id/cpfResponsavel" />
    <TextView
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50px"
        android:id="@+id/editCpfResponsavel" />
    <TextView
        android:text="Endereço:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="50px"
        android:id="@+id/endereco" />
    <TextView
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50px"
        android:id="@id/editEndereco" />
    <TextView
        android:text="Nome do Aluno:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="50px"
        android:id="@+id/nomeAluno" />
    <TextView
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50px"
        android:id="@id/editNomeAluno" />
    <TextView
        android:text="Grade do Aluno:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="50px"
        android:id="@+id/gradeAluno" />
    <TextView
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50px"
        android:id="@+id/editGrade" />
    <TextView
        android:text="Sexo do Aluno:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="50px"
        android:id="@+id/sexoAluno" />
    <TextView
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50px"
        android:id="@+id/editSexo" />
    
    <LinearLayout
        android:layout_marginTop="50px"
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">
        <Button
            
            android:text="Corrigir"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="50px"
            android:gravity="center"
            android:id="@+id/btnCorrigir"
             />
        <Button
            android:text="Confirmar"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:id="@+id/btnConfirmar" />
    </LinearLayout>

</LinearLayout>